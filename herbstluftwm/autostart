#!/usr/bin/env bash

hc() {
    herbstclient "$@"
}

hc emit_hook reload

# remove all existing keybindings
hc keyunbind --all

# keybindings
Mod=Super # Use the super key as the main modifier

hc keybind $Mod-Control-Shift-q quit
hc keybind $Mod-Shift-r reload
hc keybind $Mod-Shift-c close
hc keybind $Mod-Return  spawn st
hc keybind $Mod-space   spawn rofi -modi run,drun -show run -show-icons -display-run 'run: ' -display-drun 'drun: '
hc keybind $Mod-w       spawn rofi -show window -show-icons -display-window 'window: '
hc keybind $Mod-e       spawn ~/.config/herbstluftwm/locate.sh
hc keybind $Mod-n       spawn ~/.config/herbstluftwm/rofi-wifi-menu.sh

# locking
hc keybind $Mod-l       spawn i3lock -fe -ti ~/Downloads/iu.png
hc keybind $Mod-Shift-l spawn systemctl suspend

# basic movement
# focusing clients
hc keybind $Mod-Left  focus left
hc keybind $Mod-Down  focus down
hc keybind $Mod-Up    focus up
hc keybind $Mod-Right focus right

# moving clients
hc keybind $Mod-Shift-Left  shift left
hc keybind $Mod-Shift-Down  shift down
hc keybind $Mod-Shift-Up    shift up
hc keybind $Mod-Shift-Right shift right

# splitting frames
# create an empty frame at the specified direction
hc keybind $Mod-u split bottom 0.5
hc keybind $Mod-o split right  0.5

# resizing frames
resizestep=0.05
hc keybind $Mod-Control-Left  resize left  +$resizestep
hc keybind $Mod-Control-Down  resize down  +$resizestep
hc keybind $Mod-Control-Up    resize up    +$resizestep
hc keybind $Mod-Control-Right resize right +$resizestep

# tags
tag_names=( {1..9} )
tag_keys=( {1..9} 0 )

hc rename default "${tag_names[0]}" || true
for i in "${!tag_names[@]}" ; do
    hc add "${tag_names[$i]}"
    key="${tag_keys[$i]}"
    if ! [ -z "$key" ] ; then
        hc keybind "$Mod-$key" use_index "$i"
        hc keybind "$Mod-Shift-$key" move_index "$i"
    fi
done

# cycle through tags
hc keybind $Mod-period use_index +1 --skip-visible
hc keybind $Mod-comma  use_index -1 --skip-visible

# layouting
hc keybind $Mod-r remove
hc keybind $Mod-s floating toggle
hc keybind $Mod-f fullscreen toggle

# proprietary bindings
hc keybind XF86MonBrightnessUp   spawn ~/.config/herbstluftwm/brightness.sh +
hc keybind XF86MonBrightnessDown spawn ~/.config/herbstluftwm/brightness.sh -
hc keybind XF86AudioRaiseVolume  spawn ~/.config/herbstluftwm/volume.sh +
hc keybind XF86AudioLowerVolume  spawn ~/.config/herbstluftwm/volume.sh -
hc keybind XF86AudioMute         spawn pactl set-sink-mute @DEFAULT_SINK@ toggle
hc keybind Print  spawn ~/.config/herbstluftwm/scrot-random.sh

# mouse
hc mouseunbind --all
hc mousebind $Mod-Button1 move
hc mousebind $Mod-Button3 resize

# focus
hc keybind $Mod-BackSpace   cycle_monitor
hc keybind $Mod-Tab         cycle_all +1
hc keybind $Mod-Shift-Tab   cycle_all -1

# rules
hc unrule -F
#hc rule class=XTerm tag=3 # move all xterms to tag 3
hc rule focus=on # normally focus new clients
#hc rule focus=off # normally do not focus new clients
# give focus to most common terminals
#hc rule class~'(.*[Rr]xvt.*|.*[Tt]erm|Konsole)' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' pseudotile=on
hc rule windowtype='_NET_WM_WINDOW_TYPE_DIALOG' focus=on
#hc rule windowtype~'_NET_WM_WINDOW_TYPE_DESKTOP' manage=off
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK|DESKTOP)' manage=off
#hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' manage=off pseudotile=on focus=on
#hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK)' manage=off focus=off

# theme
~/.config/herbstluftwm/theme.sh
hc set snap_distance 2
hc set snap_gap 2

# unlock, just to be sure
hc unlock
hc set tree_style '╾│ ├└╼─┐'

# for some reason hc detect_monitors doesn't do the job
hc detect_monitors
for monitor in $(herbstclient list_monitors | cut -d: -f1) ; do
    # start panel on each monitor
    ~/.config/herbstluftwm/panel.sh $monitor &
done

export $(gnome-keyring-daemon -rd)
